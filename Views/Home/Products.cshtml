@{
    ViewData["Title"] = "Product Management";
}

<div>

    <h2>Products</h2>

    @if (!(ViewBag.Products as IEnumerable<Stripe.Product>).Any())
    {
        <p>There are no products</p>

        <h1 class="display-4">Product</h1>
        <form asp-controller="Home" asp-action="CreatePlan" method="post">
            <input type="submit" class="btn btn-primary" value="Create Product" />
        </form>
    }
    else
    {
        <table class="table-sm">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
            @foreach (var product in ViewBag.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>
                        @if (ViewBag.IsCustomerCreated)
                        {
                            <a asp-controller="Home" asp-action="Purchase" class="btn btn-success">Purchase</a>
                        }
                        else
                        {
                            <text>Create a customer account to make a purchase</text>
                        }

                    </td>
                </tr>
            }
        </table>
    }

</div>